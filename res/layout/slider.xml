
<TableLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/bg"
    tools:context="com.example.com.sm.smartmattress.MainActivity">
   
    <TableRow
    		android:id="@+id/tableRow1"
          	android:paddingLeft="60dp"
          	android:paddingRight="60dp"
          	android:paddingTop="5dp"
	        android:paddingBottom="5dp">
    <TextView
        android:id="@+id/seekBarText"
        android:layout_gravity="center_horizontal"
        android:layout_width="0dip"
        android:paddingBottom="10dp"
        android:textSize="15sp"
        android:text="@string/seekBarText">
    </TextView>
    </TableRow>

  <TableRow
    		android:id="@+id/tableRow2"
          	android:paddingLeft="60dp"
          	android:paddingRight="60dp"
          	android:paddingTop="5dp"
	        android:paddingBottom="@dimen/paddingBottom">
	 <SeekBar android:id="@+id/slider1" 
	     android:max="10"
	     android:layout_width="180dp" 
	     android:layout_height="40dp" 
	     android:layout_below="@+id/slider1" 
	     android:layout_alignParentLeft="true" 
	     android:layout_marginTop="26dp"></SeekBar>
    	</TableRow>
    	
  
  <TableRow
    		android:id="@+id/tableRow3"
          	android:paddingLeft="60dp"
          	android:paddingRight="60dp"
          	android:paddingTop="5dp"
	        android:paddingBottom="@dimen/paddingBottom">

   <Button
    	    android:id="@+id/backButtonSlider"
    	    android:layout_width="180dp"
    	    android:layout_height="50dp"
    	    android:text="@string/backButtonSlider"
    	    android:textSize="@dimen/textSize" >
    	</Button>
	 </TableRow>
	</TableLayout>
