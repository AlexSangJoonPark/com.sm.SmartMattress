
<TableLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/bg"
    tools:context="com.example.com.sm.smartmattress.MainActivity">
   
    <TableRow
    		android:id="@+id/tableRow1"
          	android:paddingLeft="60dp"
          	android:paddingRight="60dp"
          	android:paddingTop="5dp"
	        android:paddingBottom="5dp">
    <TextView
        android:id="@+id/titleString"
        android:layout_gravity="center_horizontal"
        android:layout_width="0dip"
        android:paddingBottom="10dp"
        android:textSize="@dimen/textSize"
        android:text="@string/helpText1">
    </TextView>
    </TableRow>
    
        <TableRow
    		android:id="@+id/tableRow2"
          	android:paddingLeft="60dp"
          	android:paddingRight="60dp"
          	android:paddingTop="5dp"
	        android:paddingBottom="5dp">
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="0dip"
        android:paddingBottom="10dp"
        android:textSize="@dimen/textSize"
        android:text="@string/helpText2">
    </TextView>
    </TableRow>
    
        
        <TableRow
    		android:id="@+id/tableRow3"
          	android:paddingLeft="60dp"
          	android:paddingRight="60dp"
          	android:paddingTop="5dp"
	        android:paddingBottom="5dp">
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="0dip"
        android:paddingBottom="10dp"
        android:textSize="@dimen/textSize"
        android:text="@string/helpText3">
    </TextView>
    </TableRow>
    
        
        <TableRow
    		android:id="@+id/tableRow4"
          	android:paddingLeft="60dp"
          	android:paddingRight="60dp"
          	android:paddingTop="5dp"
	        android:paddingBottom="5dp">
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="0dip"
        android:paddingBottom="10dp"
        android:textSize="@dimen/textSize"
        android:text="@string/helpText4">
    </TextView>
    </TableRow>
  <TableRow
    		android:id="@+id/tableRow5"
          	android:paddingLeft="60dp"
          	android:paddingRight="60dp"
          	android:paddingTop="5dp"
	        android:paddingBottom="@dimen/paddingBottom">
	<Button
    	    android:id="@+id/backButton"
    	    android:layout_width="180dp"
    	    android:layout_height="50dp"
    	    android:text="@string/backButton"
    	    android:textSize="@dimen/textSize" >
    	</Button>
    	</TableRow>
	</TableLayout>
